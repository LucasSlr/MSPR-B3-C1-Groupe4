{% extends 'base.html.twig' %}

{% block title %}Plante
{% endblock %}

{% block body %}
	<div class="header d-flex justify-content-between">
		<h1>Plante</h1>
		<div class="button mt-3 d-flex">
			<a href="{{ path('app_plante_index') }}">
				<button class="btn btn-primary me-1 mb-2">
					back to list
				</button>
			</a>
			<a href="{{ path('app_plante_edit', {'id': plante.id}) }}">
